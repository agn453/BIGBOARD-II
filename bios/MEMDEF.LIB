;********************************************************
;*							*
;*    BIGBOARD II    HIGH MEMORY STORAGE DEFINITIONS	*
;*							*
;********************************************************
;
MONITR	EQU	0F000H
BUFRAM	EQU	0F880H
SYSRAM	EQU	0FF00H
;
	ASEG
;
FD$DATSIZ EQU	1024
HD$DATSIZ EQU	512
;
	ORG	BUFRAM
;
HD$DATBUF:
	DS	HD$DATSIZ
FD$DATBUF:
	DS	FD$DATSIZ
;
	ORG	SYSRAM
;
SIOVEC:	DS	2		;SIOB TX INTERRUPT
	DS	2		;SIOB EXTERNAL/STATUS INTERRUPT
	DS	2		;SIOB RX INTERRUPT
	DS	2		;SIOB SPECIAL RX CONDITION INTERRUPT
	DS	2		;SIOA TX INTERRUPT
	DS	2		;SIOA EXTERNAL/STATUS INTERRUPT
	DS	2		;SIOA RX INTERRUPT
	DS	2		;SIOA SPECIAL RX CONDITION INTERRUPT

CTCAV:	DS	2		;CTCA0 INTERRUPT (KBD STROBE)
	DS	2
	DS	2
	DS	2		;CTCA3 INTERRUPT (CRT VERT SYNC)

CTCBV:	DS	2
	DS	2
	DS	2		;CTCB2 INTERRUPT (MILLISECOND TIMER)
	DS	2		;CTCB3 INTERRUPT (CLOCK TICK)

DMAVEC:	DS	2		;DMA READY INTERRUPT
	DS	2		;DMA MATCH INTERRUPT
	DS	2		;DMA END-OF-BLOCK INTERRUPT
	DS	2		;DMA MATCH/END INTERRUPT

	DS	64		;EXTRA INTERRUPT VECTORS
;
;
;	KEYBOARD DATA INPUT FIFO VARIABLES

FIFCNT:	DS	1		;FIFO DATA COUNTER
FIFIN:	DS	1		;FIFO INPUT POINTER
FIFOUT:	DS	1		;FIFO OUTPUT POINTER
FIFSIZ:	DS	1		;MAX FIFO SIZE PARAM
;
;
CONNUM:	DS	1		;CURRENT CONSOLE DEVICE# (0,1 OR 2)
SIOADR:	DS	1		;CONSOLE SIO CONTROL/DATA PORT NUMBER
	DS	1
;
;
CONFIG:	DS	1		;STDBB AND D/S BITS FOR MONITOR
DSCOPY:	DS	1		;CONTROL BYTE FOR D/S BANK SWITCH BIT
STDCPY:	DS	1		;CONTROL BYTE FOR STD BANK SWITCH BIT
;
;
;	VECTORS FOR EXTRA FUNCTIONS IN KBD/SIO/TIMER INTERRUPTS
;	AND FOR EXTENDED MONITOR AND CRTOUT ROUTINES.
;
KBDVEC:	DS	2		;PARALLEL KEYBOARD
RDAVEC:	DS	2		;SIO RECEIVED DATA INTERRUPT
TIKVEC:	DS	2		;ONE-SECOND INTERRUPT
MONVEC:	DS	2		;EXTENDED MONITOR
CRTVEC:	DS	2		;CRT OUTPUT DRIVER
;
;
;	CLOCK-TIMER INTERRUPT VARIABLES

TOD	EQU	$
SECS:	DS	1		;CLOCK SECONDS
MINS:	DS	1		;      MINUTES
HRS:	DS	1		;      HOURS
DAY:	DS	1		;CALENDAR DAY
MONTH:	DS	1		;	  MONTH
YEAR:	DS	1		;	  YEAR
;
TICKS:	DS	2		;CLOCK TICK INTERRUPT COUNTER
NTICKS:	DS	1		;NUMBER OF TICKS PER SECOND
TIKCNT:	DS	1		;PRESCALER FOR 1 SECOND TIMER
;
;
;	DISK I/O DRIVER VARIABLES

CURDSK:	DS	1		;CURRENTLY SELECTED DISK#
CURTRK:	DS	1		;TRACK POSITION OF SELECTED DRIVE
TRKTAB:	DS	4		;HEAD POSITIONS FOR 4 DRIVES
	DS	4		;DENSITY CONTROL BITS FOR 4 DRIVES
SPEED:	DS	1		;SEEK SPEED FOR 1771 COMMANDS
SETTLE:	DS	1		;HEAD SETTLING TIME
BLKSIZ:	DS	2		;MAX DMA BLOCK SIZE FOR READ/WRITE
NSTOP:	DS	1		;NUMBER OF INDEX PULSES TILL DISK STOP
NREVS:	DS	1		;NUMBER OF INDEX PULSES BEFORE READY
DSKTYP:	DS	1		;DISK TYPE / DENSITY INDICATOR
MAXRWT:	DS	1		;MAXIMUM RETRY NUMBER FOR DISK I/O

CURSEC:	DS	1		;SECTOR# FOR READ/WRITE SECTOR
CMDTYP:	DS	1		;COMMAND BYTE FOR READS/WRITES
RWTRY:	DS	1		;READ/WRITE RETRY COUNT
FNDTRY:	DS	1		;SEEK RETRY COUNT
ERRTYP:	DS	1		;ERROR STATUS FOR READ/WRITE ROUTINES
IOPTR:	DS	2		;DISK I/O BUFFER POINTER
SELCPY:	DS	1		;COPY OF DATA IN SELECT/MUX OUTPUTS
STPVEC:	DS	2		;VECTOR FOR STEP FINITE STATE MACHINE
STPCMD:	DS	1		;... 179X STEP COMMAND BYTE
STPCNT:	DS	1		;... LOOP COUNT
STPDLY:	DS	1		;... DELAY COUNT
INUSE:	DS	1		;DISKS IN-USE FLAG FOR BACKGROUND
DSKCNT:	DS	1		;... DISK TURN-OFF COUNTER
RDYCNT:	DS	1		;... NOT-READY TIMER
OLDCTC:	DS	1		;... LAST CTCA1 COUNT
;
;
;
;	CRT OUTPUT DRIVER VARIABLES

ROW:	DS	1		;ROW/COLUMN FOR CRT CURSOR LOCATION
COL:	DS	1
BLANK:	DS	1		;CHARACTER USED FOR BLANK FILL
ATTRIB:	DS	1		;CURRENT CHARACTER ATTRIBUTE BITS
GMODE:	DS	1		;CURRENT DISPLAY MODE BITS
ESCVEC:	DS	2		;POINTER FOR LEAD-IN SEQUENCE ROUTINES
ROWTMP:	DS	1
SCROLL:	DS	1		;SCROLL REQUEST FLAG
START:	DS	2		;CONTENTS OF 6845 START ADDRESS REG
NEWLIN:	DS	2		;RELATIVE ADDR OF NEW LINE AFTER SCROLL
MOVECS:	DS	1		;CURSOR-MOVE REQUEST FLAG
CURSOR:	DS	2		;OFFSET (0..2047) TO CURSOR LOCATION
OLDCSR:	DS	2		;POINTER TO CURSOR IN ATTR MEMORY
CRTFLG:	DS	1		;CRT PARAMETER BITS

;
;	FREE MEMORY LIST POINTER
;

FREPTR:	DS	2
;
	DS	64
BOOT$STACK:
	DS	2
;
;
	CSEG
;
;

